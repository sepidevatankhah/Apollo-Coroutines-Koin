<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        
        <TextView
            android:fontFamily="@font/campton_bold"
            android:id="@+id/post_detail_title"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_width="0dp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />
        
        <TextView
            android:fontFamily="@font/campton_book"
            android:id="@+id/post_detail_body"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:textAlignment="textStart"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/post_detail_title"
            app:layout_constraintStart_toStartOf="@+id/post_detail_title"
            app:layout_constraintTop_toBottomOf="@+id/post_detail_title"
            tools:text="Body body body body Body body body body Body body
            body body Body body body body
            Body body body bodyvBody body body bodyBody
            body body bodyBody body body bodyBody body body
            bodyBody body body bodyBody body body body" />
        
        <TextView
            android:fontFamily="@font/campton_book"
            android:id="@+id/user_name_label"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="@string/username"
            app:layout_constraintStart_toStartOf="@+id/post_detail_title"
            app:layout_constraintTop_toBottomOf="@+id/post_detail_body" />
        
        <TextView
            android:fontFamily="@font/campton_book"
            android:id="@+id/user_name_text"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toEndOf="@+id/user_name_label"
            app:layout_constraintTop_toBottomOf="@+id/post_detail_body"
            tools:text="Sun.Vatankhah" />
        
        <TextView
            android:fontFamily="@font/campton_book"
            android:id="@+id/name_label"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:text="@string/full_name"
            app:layout_constraintStart_toStartOf="@+id/post_detail_title"
            app:layout_constraintTop_toBottomOf="@+id/user_name_label" />
        
        <TextView
            android:fontFamily="@font/campton_book"
            android:id="@+id/name_text"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toEndOf="@+id/name_label"
            app:layout_constraintTop_toBottomOf="@+id/user_name_label"
            app:layout_constraintTop_toTopOf="@+id/name_label"
            tools:text="Sepideh Vatankhah" />
    
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <data />
</layout>